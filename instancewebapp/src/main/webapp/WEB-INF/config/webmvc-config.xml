<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- Map URLs to Controllers -->
  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <props>
        <prop key="/spaces.htm">spacesController</prop>
        <prop key="/contents.htm">contentsController</prop>
        <prop key="/content.htm">contentController</prop>
        <prop key="/addSpace.htm">addSpaceController</prop>
      </props>
    </property>
    <property name="order" value="1" />
  </bean>

  <!-- Request Controllers - processes request -->
  <bean id="spacesController" class="org.duraspace.control.SpacesController">
  </bean>

  <bean id="contentsController" class="org.duraspace.control.ContentsController">
    <property name="successView" value="contents" />
  </bean>

  <bean id="contentController" class="org.duraspace.control.ContentController">
    <property name="successView" value="content" />  
  </bean>

  <bean id="addSpaceController" class="org.duraspace.control.AddSpaceController">
    <property name="successView" value="spaces" /> 
  </bean>

  <!-- View Resolvers - select the JSP to display results -->
  <bean id="duraViewResolver"
    class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="viewClass"
      value="org.springframework.web.servlet.view.JstlView"></property>
    <property name="prefix" value="/WEB-INF/jsp/"></property>
    <property name="suffix" value=".jsp"></property>
  </bean>

  <bean id="exceptionResolver" class="org.duraspace.common.DuraHandlerExceptionResolver">
    <property name="exceptionMappings">
      <props>
        <prop key="java.lang.Exception">error</prop>
      </props>
    </property>
    <property name="order" value="2" />
  </bean>

  <!-- Enables plain Controllers -->
  <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter" />

</beans>