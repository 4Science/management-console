<assembly>
  <id>manifest-verify</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>jar</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>*.properties</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <includes>
        <include>org.duracloud:common:bundle:${project.version}</include>
        <include>org.apache.commons:com.springsource.org.apache.commons.io:jar:1.4.0</include>
        <include>log4j:log4j:jar:1.2.13</include>
        <include>commons-cli:commons-cli:jar:1.2</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>

