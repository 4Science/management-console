<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
           
  <!-- Localization   -->
  <bean id="messageSource"
      class="org.springframework.context.support.ResourceBundleMessageSource">
      <property name="basename"><value>messages</value></property>
  </bean>
  
  <!-- Handles Multipart Requests -->
  <bean id="multipartResolver"
        class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>

  
  <!-- Map URLs to Controllers -->
  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <props>
        <prop key="/login">loginController</prop>
        <prop key="/init.htm">initController</prop>
        <prop key="/home.htm">homeController</prop>
        <prop key="/spaces.htm">spacesController</prop>
        <prop key="/removeSpace.htm">removeSpaceController</prop>
        <prop key="/space/changeAccess">changeSpaceAccessController</prop>
        <prop key="/contents.htm">contentsController</prop>
        <prop key="/content.htm">contentController</prop>
        <prop key="/removeContent.htm">removeContentController</prop>
        <prop key="/spaces/tag/add">addTagController</prop>
        <prop key="/spaces/tag/remove">removeTagController</prop>
        <prop key="/spaces/metadata/add">addMetadataController</prop>
        <prop key="/spaces/metadata/remove">removeMetadataController</prop>
        <prop key="/data/spaces/space">spaceDataController</prop>
        <prop key="/changeProvider">changeProviderController</prop>
        <prop key="/services">servicesController</prop>
        <prop key="/services/undeploy">undeployServiceController</prop>
        <prop key="/data/services/deployment/properties">serviceDeploymentPropertiesController</prop>
        <prop key="/data/spaces/contentItem">contentItemDataController</prop>
        <prop key="/data/spaces/space">spaceDataController</prop>
      </props>
    </property>
    <property name="order" value="1" />
  </bean>

  <!-- Request Controllers - processes request -->
  <bean id="loginController" class="org.duracloud.duradmin.control.LoginController"/>

  <bean id="initController" class="org.duracloud.duradmin.control.InitController" parent="baseFormController"/>
  <bean id="servicesController" class="org.duracloud.duradmin.control.ServicesController" parent = "baseCommandController"/>

  <bean id="spacesController" class="org.duracloud.duradmin.control.SpacesController" parent="baseFormController">
    <property name="successView" value="spaces" />
  </bean>

  <bean id="contentController" class="org.duracloud.duradmin.control.ContentController" parent="baseFormController">
    <property name="successView" value="content" />
  </bean>
  
  <bean id="contentsController" class="org.duracloud.duradmin.control.ContentsController" parent="baseCommandController">
    <property name="successView" value="contents" />
  </bean>

  <bean id="homeController" class="org.duracloud.duradmin.control.HomeController">
    <constructor-arg ref="controllerSupport"/>
  </bean>

  <bean id="changeProviderController" class="org.duracloud.duradmin.control.ChangeProviderController" parent="baseCommandController"/>
  <bean id="changeSpaceAccessController" class="org.duracloud.duradmin.control.ChangeSpaceAccessController" parent="baseCommandController"/>
  <bean id="removeSpaceController" class="org.duracloud.duradmin.control.RemoveSpaceController" parent="baseCommandController"/>
  <bean id="removeContentController" class="org.duracloud.duradmin.control.RemoveContentController" parent="baseCommandController"/>
  <bean id="addTagController" class="org.duracloud.duradmin.control.AddTagController" parent="baseCommandController"/>
  <bean id="removeTagController" class="org.duracloud.duradmin.control.RemoveTagController" parent="baseCommandController"/>
  <bean id="addMetadataController" class="org.duracloud.duradmin.control.AddMetadataController" parent="baseCommandController"/>
  <bean id="removeMetadataController" class="org.duracloud.duradmin.control.RemoveMetadataController" parent="baseCommandController"/>
  <bean id="contentItemDataController" class="org.duracloud.duradmin.control.ContentItemDataController" parent="baseCommandController"/>
  <bean id="undeployServiceController" class="org.duracloud.duradmin.control.UndeployServiceController" parent="baseCommandController"/>
  <bean id="serviceDeploymentPropertiesController" class="org.duracloud.duradmin.control.ServiceDeploymentPropertiesController" parent="baseCommandController"/>
  <bean id="spaceDataController" class="org.duracloud.duradmin.control.SpaceDataController" parent="baseCommandController"/>
  
  
    <bean id="tilesConfigurer"
          class="org.duracloud.duradmin.view.tiles2.TilesConfigurer" >
		<property  name="preparerFactoryClass" value="org.springframework.web.servlet.view.tiles2.SpringBeanPreparerFactory">
			
		</property>

        <property name="definitions">
            <list>
                <value>/WEB-INF/config/tiles.xml</value>
            </list>
        </property>
    </bean>

    <bean id="tilesViewResolver"
          class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.tiles2.TilesView" />
        <property name="order" value="1"/>
    </bean>
    
    <bean id="basePreparer" class="org.duracloud.duradmin.view.BaseViewPreparer">
		<property name="contentStoreProvider" ref="contentStoreProvider"/>
	</bean>
	
  <bean id="exceptionResolver" class="org.duracloud.duradmin.common.SimpleExceptionResolver">
    <property name="exceptionMappings">
      <props>
        <prop key="java.lang.Exception">error</prop>
      </props>
    </property>
    <property name="order" value="2" />
  </bean>

  <!-- Enables plain Controllers -->
  <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter" />
  
<!-- view beans -->  


	<bean name="viewResolver" class="org.springframework.web.servlet.view.XmlViewResolver">
	  <property name="location" value="/WEB-INF/config/views.xml"/>
      <property name="order" value="0"/>
	</bean>  
</beans>