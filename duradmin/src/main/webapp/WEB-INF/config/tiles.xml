<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	
	<definition name="base" template="/WEB-INF/jsp/layout/base-layout.jsp" preparer="org.duracloud.duradmin.view.BaseViewPreparer">
		<put-attribute name="header" value="/WEB-INF/jsp/layout/base-header.jsp"/>
		<put-attribute name="menu" value=""/>
		<put-attribute name="main-content" value="main-content"/>
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/base-footer.jsp"/>
		<put-attribute name="mainTab" value="home" />
	</definition>
		
	<definition name="home" extends="base">
		<put-attribute name="menu" value="/WEB-INF/jsp/homeMenu.jsp"/>
		<put-attribute name="main-content" value="/WEB-INF/jsp/home.jsp"/>
	</definition>
	
	<definition name="spaces" extends="base">
		<put-attribute name="main-content" value="/WEB-INF/jsp/spaces.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/jsp/spacesMenu.jsp"/>
		<put-attribute name="mainTab" value="spaces" />
	</definition>



	<definition name="defineSpace" extends="spaces">
		<put-attribute name="main-content" value="/WEB-INF/jsp/newSpaceForm.jsp"/>
		<put-attribute name="menu" value=""/>
	</definition>

	<definition name="defineContentItem" extends="spaces">
		<put-attribute name="main-content" value="/WEB-INF/jsp/newContentItemForm.jsp"/>
		<put-attribute name="menu" value=""/>
	</definition>

	<definition name="contents" extends="spaces" >
		<put-attribute name="main-content" value="/WEB-INF/jsp/contents.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/jsp/contentsMenu.jsp"/>
	</definition>
	
	<definition name="content" extends="contents">
		<put-attribute name="main-content" value="/WEB-INF/jsp/content.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/jsp/contentMenu.jsp"/>
	</definition>
	
	<definition name="services" extends="base">
		<put-attribute name="main-content" value="/WEB-INF/jsp/services.jsp"/>
		<put-attribute name="menu" value="Services Menu"/>
		<put-attribute name="mainTab" value="services" />
	</definition>

	<definition name="error" extends="base">
		<put-attribute name="main-content" value="/WEB-INF/jsp/error.jsp"/>
		<put-attribute name="mainTab" value="" />
		<put-attribute name="menu" value="No Menu: Error"/>
	</definition>

	<definition name="exception" extends="base">
		<put-attribute name="main-content" value="/WEB-INF/jsp/error.jsp"/>
		<put-attribute name="mainTab" value="" />
		<put-attribute name="menu" value="No Menu: Error"/>
	</definition>

</tiles-definitions>