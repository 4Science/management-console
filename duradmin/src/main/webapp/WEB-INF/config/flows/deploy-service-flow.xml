<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation=
     "http://www.springframework.org/schema/webflow
     http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"  >

  <input name="service" required="true" type="org.duracloud.serviceconfig.ServiceInfo"/>

  <view-state id="configureService" model="service" >
    <transition on="submit" to="success">
		<evaluate expression="deployServiceAction.execute(service,messageContext)" />    
    </transition>
  </view-state>

  <end-state id="success">
  	<output name="service" value="service"/>
  </end-state>
  
  <end-state id="cancel" />

  <global-transitions>
    <transition on="cancel" to="cancel"  validate="false"/>
  </global-transitions>

</flow>