#!/bin/bash
#
# duraspace    
#
# chkconfig: 
# description: Startup of customerwebapp, assuming tomcat is already running.     


RETVAL=$?

case "$1" in
 start)
        if [ 1 ];
          then
            echo $"Starting DuraSpace.org"
            cd /opt/duraspace
            /bin/su tomcat -c "mvn -P profile-bootstrap scm:bootstrap"
            cd /opt/duraspace/target/checkout
            /bin/su tomcat -c "./resources/scripts/installLibs.sh"
            /bin/su tomcat -c "mvn install -Dmaven.test.skip=true"
            cd /opt/duraspace/target/checkout/mainwebapp
            /bin/su tomcat -c "mvn tomcat:undeploy -Dmaven.tomcat.server=tomcat-server"

            cd /opt/duraspace/target/checkout/duradavwebapp
            /bin/su tomcat -c "mvn tomcat:undeploy -Dmaven.tomcat.server=tomcat-server"
            
        fi
        ;;
 stop)
        echo $"Nothing to be done."
        ;;
 *)
        echo $"Usage: $0 {start|stop}"
        exit 1
        ;;
esac

exit $RETVAL



