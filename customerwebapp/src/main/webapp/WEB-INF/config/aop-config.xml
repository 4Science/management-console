<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  
  <!-- AOP - Advice -->
     
  <bean id="ingestAdvice" class="org.duraspace.storage.aop.IngestAdvice">
  </bean>
  
  <bean id="ingestAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="ingestAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.addContent"/>
  </bean>
  <!-- 
  comment below
  <bean id="addContentController" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="target" ref="storageProvider"/>
    <property name="interceptorNames" value="ingestAdvisor"/>
    <property name="proxyInterfaces" value="org.springframework.web.servlet.mvc.Controller"/>
  </bean> 
  comment above
  -->

  <!-- Enables Auto-AOP Proxy Creation -->
  <bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>
  
</beans>