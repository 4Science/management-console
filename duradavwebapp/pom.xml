<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.duraspace</groupId>
  <artifactId>duradavwebapp</artifactId>
  <packaging>war</packaging>
  <version>1.0.0</version>
  <name>DuraSpace DuraDAV Webapp</name>
  <url>http://localhost:8080/${artifactId}</url>

  <parent>
    <groupId>org.duraspace</groupId>
    <artifactId>duraspace</artifactId>
    <version>1.0.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  
  <dependencies>
  
    <!-- internal projects -->
    <dependency>
      <groupId>org.duraspace</groupId>
      <artifactId>common</artifactId>
      <version>1.0.0</version>
    </dependency>
  
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.4</version>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>servlet-api</artifactId>
      <version>6.0.18</version>
      <scope>provided</scope>
    </dependency>
    
  </dependencies>

  <build>
    <plugins>
    
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>tomcat-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>deploy-only</goal>
            </goals>
            <configuration>
              <warFile>target/${artifactId}-${version}.war</warFile>
              <server>tomcat-server</server>
              <update>true</update>
            </configuration>
          </execution>        
        </executions>        
      </plugin>
      
    </plugins>
  </build>

</project>
