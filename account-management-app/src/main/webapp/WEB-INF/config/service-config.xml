<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd"
>
  <bean
    class="org.duracloud.account.util.impl.DuracloudUserServiceImpl"
    primary="true"
    scope="singleton"
    id="userService"
    name="userDetailsService"
    
  >
      <constructor-arg ref="userRepo"/>
      <constructor-arg ref="accountRepo"/>
  </bean>
  <bean
    class="org.duracloud.account.util.impl.AccountManagerServiceImpl"
    id="accountManagerService"
    scope="singleton"
  >
      <constructor-arg ref="userRepo"/>
      <constructor-arg ref="accountRepo"/>
  </bean>
 
  <bean
    class="org.duracloud.account.db.mockimpl.MockDuracloudUserRepo"
    id="userRepo"
    scope="singleton"
    primary="true" />
  <bean
    class="org.duracloud.account.db.mockimpl.MockDuracloudAccountRepo"
    id="accountRepo"
    scope="singleton"
    primary="true" />
    
  <bean
    class="org.duracloud.account.util.impl.RootAccountManagerServiceImpl"
    id="rootAccountManagerService"
    scope="singleton"
    primary="true" >
      <constructor-arg ref="userRepo"/>
      <constructor-arg ref="accountRepo"/>

    </bean>
    
    
</beans>