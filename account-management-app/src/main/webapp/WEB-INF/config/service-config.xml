<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">


  <!--<bean id="repoMgr" class="org.duracloud.account.db.repo.DuracloudRepoMgr" />-->

  <bean id="notificationFactory"
        class="org.duracloud.notification.AmazonNotificationFactory"/>

  <bean id="notificationMgr"
        class="org.duracloud.account.db.util.notification.NotificationMgrImpl">
    <constructor-arg ref="notificationFactory"/>
    <constructor-arg ref="mcConfig"/>
  </bean>

  <bean id="systemMonitor"
        class="org.duracloud.account.db.util.sys.impl.SystemMonitorImpl">
    <constructor-arg ref="notificationMgr"/>
    <constructor-arg ref="mcConfig"/>
    <constructor-arg ref="amaEndpoint"/>
  </bean>

  <bean id="duracloudUserService"
        class="org.duracloud.account.db.util.impl.DuracloudUserServiceImpl"
        primary="true"
        scope="singleton"
        name="userDetailsService">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="notificationMgr"/>
    <constructor-arg ref="userDetailsPropagator" />
    <constructor-arg ref="amaEndpoint"/>
  </bean>

  <bean id="duracloudGroupService"
        class="org.duracloud.account.db.util.impl.DuracloudGroupServiceImpl"
        primary="true"
        scope="singleton"
        name="duracloudGroupService">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="userDetailsPropagator"/>
  </bean>


  <bean id="accountManagerService"
        class="org.duracloud.account.db.util.impl.AccountManagerServiceImpl"
        scope="singleton">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="duracloudUserService"/>
    <constructor-arg ref="accountServiceFactory"/>
   <constructor-arg ref="accountClusterUtil"/>
    <constructor-arg ref="userDetailsPropagator"/>
    <constructor-arg>
      <set>
        <ref bean="systemMonitor"/>
      </set>
    </constructor-arg>
  </bean>

  <bean id="annotationParser" class="org.duracloud.account.db.util.security.impl.AnnotationParserImpl"/>

  <bean id="accountServiceFactory" class="org.duracloud.account.db.util.impl.AccountServiceFactoryImpl">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="acctVoter"/>
    <constructor-arg ref="securityContextUtil"/>
    <constructor-arg ref="annotationParser"/>
    <constructor-arg ref="amaEndpoint"/>
  </bean>

  <bean id="computeProviderFactory"
        class="org.duracloud.account.compute.AmazonComputeProviderFactory"
        scope="singleton">
  </bean>

  <bean id="computeProviderUtil"
        class="org.duracloud.account.compute.ComputeProviderUtil"
        scope="singleton">
    <constructor-arg ref="computeProviderFactory"/>
  </bean>

  <bean id="accountClusterUtil"
        class="org.duracloud.account.db.util.util.AccountClusterUtil"
        scope="singleton">
    <constructor-arg ref="repoMgr"/>
  </bean>

  <bean id="instanceServiceFactory" class="org.duracloud.account.db.util.impl.DuracloudInstanceServiceFactoryImpl">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="instanceVoter"/>
    <constructor-arg ref="securityContextUtil"/>
    <constructor-arg ref="accountClusterUtil"/>
    <constructor-arg ref="computeProviderUtil"/>
    <constructor-arg ref="annotationParser"/>
    <constructor-arg ref="notificationMgr"/>
    <constructor-arg ref="amaEndpoint"/>
    <constructor-arg ref="duracloudMillConfigService"/>

  </bean>

  <bean id="instanceManagerService"
        class="org.duracloud.account.db.util.impl.DuracloudInstanceManagerServiceImpl"
        scope="singleton">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="accountClusterUtil"/>
    <constructor-arg ref="computeProviderUtil"/>
    <constructor-arg ref="instanceServiceFactory"/>
  </bean>

  <bean id="rootAccountManagerService"
        class="org.duracloud.account.db.util.impl.RootAccountManagerServiceImpl"
        scope="singleton"
        primary="true">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="notificationMgr"/>
    <constructor-arg ref="userDetailsPropagator" />
    <constructor-arg ref="instanceManagerService" />
    <constructor-arg ref="duracloudUserService" />
    <constructor-arg ref="amaEndpoint"/>
  </bean>

  <!--This service pushes UserDetails updates down to the DuraCloud instances-->
  <bean id="userDetailsPropagator"
        class="org.duracloud.account.db.util.usermgmt.impl.UserDetailsPropagatorImpl">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="instanceManagerService" />
    <constructor-arg ref="accountClusterUtil"/>
  </bean>

</beans>
