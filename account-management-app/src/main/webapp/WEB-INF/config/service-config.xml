<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd"
>
  <bean
    class="org.duracloud.account.util.impl.DuracloudUserServiceImpl"
    primary="true"
    scope="singleton"
    id="userService"
    name="userDetailsService"
    
  >
      <constructor-arg ref="userRepo"/>
      <constructor-arg ref="accountRepo"/>
      <constructor-arg ref="rightsRepo"/>
      <constructor-arg ref="idUtil"/>
  </bean>
  <bean
    id="accountManagerService"
    class="org.duracloud.account.util.impl.AccountManagerServiceImpl"
    scope="singleton">
    <constructor-arg ref="userRepo"/>
    <constructor-arg ref="accountRepo"/>
    <constructor-arg ref="rightsRepo"/>
    <constructor-arg ref="idUtil"/>
  </bean>
 
  <bean 
    class="org.duracloud.account.db.amazonsimple.AmazonSimpleDBClientMgr"
    id="dbClientMgr"
    scope="singleton"
    primary="true">
    <constructor-arg value="xxxxxxxxxxxxxxxxxxxx"/>  
    <constructor-arg value="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>  
  </bean>
  <bean
    class="org.duracloud.account.db.amazonsimple.DuracloudUserRepoImpl"
    id="userRepo"
    primary="true">
    <constructor-arg ref="dbClientMgr"/>
    </bean>
  <bean
    class="org.duracloud.account.db.amazonsimple.DuracloudAccountRepoImpl"
    id="accountRepo"
    primary="true" >
    <constructor-arg ref="dbClientMgr"/>
    </bean>

  <bean
    class="org.duracloud.account.db.amazonsimple.DuracloudRightsRepoImpl"
    id="rightsRepo"
    primary="true">
    <constructor-arg ref="dbClientMgr"/>
   </bean>
    
  <bean
    class="org.duracloud.account.util.impl.RootAccountManagerServiceImpl"
    id="rootAccountManagerService"
    scope="singleton"
    primary="true" >
      <constructor-arg ref="userRepo"/>
      <constructor-arg ref="accountRepo"/>

    </bean>

  <bean id="idUtil" class="org.duracloud.account.util.impl.IdUtilImpl">
    <constructor-arg ref="userRepo"/>
    <constructor-arg ref="accountRepo"/>
    <constructor-arg ref="rightsRepo"/>
  </bean>

</beans>