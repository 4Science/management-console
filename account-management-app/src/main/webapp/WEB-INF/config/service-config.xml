<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">


  <bean id="idUtil" class="org.duracloud.account.db.impl.IdUtilImpl"/>

  <bean id="repoMgr"
        class="org.duracloud.account.db.amazonsimple.AmazonSimpleDBRepoMgr">
    <constructor-arg ref="idUtil"/>
  </bean>

  <bean id="notificationFactory"
        class="org.duracloud.notification.AmazonNotificationFactory"/>
  
  <bean id="notificationMgr"
        class="org.duracloud.account.util.notification.NotificationMgrImpl">
    <constructor-arg ref="notificationFactory"/>
    <constructor-arg value="notifications@duracloud.org"/>
  </bean>

  <bean id="systemMonitor"
        class="org.duracloud.account.util.sys.impl.SystemMonitorImpl">
    <constructor-arg ref="notificationMgr"/>
    <qualifier value="sysMonitor"/>
  </bean>

  <bean id="customerMonitor"
        class="org.duracloud.account.util.sys.impl.CustomerMonitorImpl">
    <constructor-arg ref="notificationMgr"/>
  </bean>

  <bean id="duracloudUserService"
        class="org.duracloud.account.util.impl.DuracloudUserServiceImpl"
        primary="true"
        scope="singleton"
        name="userDetailsService">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="userDetailsPropagator" />
  </bean>

  <bean id="accountManagerService"
        class="org.duracloud.account.util.impl.AccountManagerServiceImpl"
        scope="singleton">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="duracloudUserService"/>
    <constructor-arg ref="accountManagerServiceUtil"/>
    <constructor-arg>
      <set>
        <ref bean="systemMonitor"/>
        <ref bean="customerMonitor"/>
      </set>
    </constructor-arg>
  </bean>

  <bean id="accountManagerServiceUtil"
        class="org.duracloud.account.util.impl.AccountManagerServiceUtil"
        scope="singleton">
    <constructor-arg ref="repoMgr"/>
  </bean>

  <bean id="computeProviderFactory"
        class="org.duracloud.account.compute.AmazonComputeProviderFactory"
        scope="singleton">
  </bean>

  <bean id="computeProviderUtil"
        class="org.duracloud.account.compute.ComputeProviderUtil"
        scope="singleton">
    <constructor-arg ref="computeProviderFactory"/>
  </bean>

  <bean id="instanceManagerService"
        class="org.duracloud.account.util.impl.DuracloudInstanceManagerServiceImpl"
        scope="singleton">
    <constructor-arg ref="repoMgr"/>
    <constructor-arg ref="computeProviderUtil"/>
  </bean>

  <bean id="rootAccountManagerService"
        class="org.duracloud.account.util.impl.RootAccountManagerServiceImpl"
        scope="singleton"
        primary="true">
    <constructor-arg ref="repoMgr"/>
  </bean>

  <!--This service pushes UserDetails updates down to the DuraCloud instances-->
  <bean id="userDetailsPropagator"
        class="org.duracloud.account.util.usermgmt.impl.UserDetailsPropagatorImpl">
    <constructor-arg ref="instanceManagerService" />
    <constructor-arg ref="accountManagerServiceUtil" />
  </bean>

</beans>