<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
           
  <!-- Localization   -->
  <bean id="messageSource"
      class="org.springframework.context.support.ResourceBundleMessageSource">
      <property name="basename"><value>messages</value></property>
  </bean>
  
  <!-- Handles Multipart Requests -->
  <bean id="multipartResolver"
        class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>



  
  <!-- Map URLs to Controllers -->
  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <props>
        <prop key="/home.htm">homeController</prop>
        <prop key="/spaces.htm">spacesController</prop>
        <prop key="/removeSpace.htm">removeSpaceController</prop>
        <prop key="/contents.htm">contentsController</prop>
        <prop key="/content.htm">contentController</prop>
        <prop key="/removeContent.htm">removeContentController</prop>
        <prop key="/services.htm">servicesController</prop>
        <prop key="/deployService.htm">deployServiceController</prop>
        <prop key="/unDeployService.htm">unDeployServiceController</prop>
      </props>
    </property>
    <property name="order" value="1" />
  </bean>
  
  <!-- Request Controllers - processes request -->
  <bean id="homeController" class="org.duracloud.duradmin.control.HomeController">
  	<property name="contentStoreSelector" ref="contentStoreSelector"/>
  </bean>

  <bean id="spacesController" class="org.duracloud.duradmin.control.SpacesController">
  	<property name="contentStoreProvider" ref="contentStoreProvider"/>
    <property name="successView" value="spaces" />
  </bean>

  <bean id="removeSpaceController" class="org.duracloud.duradmin.control.RemoveSpaceController">
  	<property name="contentStoreProvider" ref="contentStoreProvider"/>
  </bean>

  <bean id="contentsController" class="org.duracloud.duradmin.control.ContentsController">
  	<property name="contentStoreProvider" ref="contentStoreProvider"/>
    <property name="successView" value="contents" />
  </bean>
  
  <bean id="removeContentController" class="org.duracloud.duradmin.control.RemoveContentController">
  	<property name="contentStoreProvider" ref="contentStoreProvider"/>
  </bean>
  

  <bean id="contentController" class="org.duracloud.duradmin.control.ContentController">
  	<property name="contentStoreProvider" ref="contentStoreProvider"/>
    <property name="successView" value="content" />  
  </bean>

  <bean id="servicesController" class="org.duracloud.duradmin.control.ServicesController">
    <property name="successView" value="services" />
  </bean>
  
  <bean id="deployServiceController" class="org.duracloud.duradmin.control.DeployServiceController">
    <property name="successView" value="services" />
  </bean>
  
  <bean id="unDeployServiceController" class="org.duracloud.duradmin.control.UnDeployServiceController">
    <property name="successView" value="services" />
  </bean>  
  
    <bean id="tilesConfigurer"
          class="org.duracloud.duradmin.view.tiles2.TilesConfigurer">
        <property name="definitions">
            <list>
                <value>/WEB-INF/config/tiles.xml</value>
            </list>
        </property>
    </bean>

    <bean id="tilesViewResolver"
          class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.tiles2.TilesView" />
    </bean>

  <bean id="exceptionResolver" class="org.duracloud.duradmin.common.SimpleExceptionResolver">
    <property name="exceptionMappings">
      <props>
        <prop key="java.lang.Exception">error</prop>
      </props>
    </property>
    <property name="order" value="2" />
  </bean>

  <!-- Enables plain Controllers -->
  <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter" />
  
  
  
</beans>