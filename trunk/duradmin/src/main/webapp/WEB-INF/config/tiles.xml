<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	
	<definition name="base" template="/WEB-INF/jsp/layout/base-layout.jsp" preparer="basePreparer">
		<put-attribute name="title" value="home" />
		<put-attribute name="header" value="base-header" />
		<put-attribute name="menu" value=""/>
		<put-attribute name="main-content" value="main-content"/>
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/base-footer.jsp"/>
		<put-attribute name="mainTab" value="home" />
	</definition>
		
	<definition name="base-header" template="/WEB-INF/jsp/layout/base-header.jsp" />

	<definition name="base-content-header" template="/WEB-INF/jsp/layout/base-content-header.jsp">
		<put-attribute name="title"/>	
		<put-attribute name="subtitle" />	
	</definition>

	<definition name="base-main-content" template="/WEB-INF/jsp/layout/base-main-content.jsp">
		<put-attribute name="header"/>	
		<put-attribute name="body" />	
	</definition>


	<definition name="home" template="/WEB-INF/jsp/home.jsp"/>
	
	<definition name="spaces" extends="base" template="/WEB-INF/jsp/spaces.jsp"/>

	<definition name="defineSpace" extends="base" template="/WEB-INF/jsp/spaces/addSpace.jsp"/>

	<definition name="defineContentItem" extends="base" template="/WEB-INF/jsp/spaces/addContentItem.jsp"/>

	<definition name="contents" extends="base" template="/WEB-INF/jsp/contents.jsp"/>
	
	<definition name="content" extends="base" template="/WEB-INF/jsp/content.jsp"/>
	
	<definition name="services" extends="base">
		<put-attribute name="main-content" value="/WEB-INF/jsp/services.jsp"/>
		<put-attribute name="menu" value="Services Menu"/>
		<put-attribute name="mainTab" value="services" />
	</definition>

	<definition name="error" extends="base">
		<put-attribute name="main-content" value="/WEB-INF/jsp/error.jsp"/>
		<put-attribute name="mainTab" value="" />
		<put-attribute name="menu" value="No Menu: Error"/>
	</definition>

	<definition name="exception" extends="base">
		<put-attribute name="main-content" value="/WEB-INF/jsp/error.jsp"/>
		<put-attribute name="mainTab" value="" />
		<put-attribute name="menu" value="No Menu: Error"/>
	</definition>

</tiles-definitions>