<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- Handles Multipart Requests -->
  <bean id="multipartResolver"
        class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>

  <!-- Map URLs to Controllers -->
  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <props>
        <prop key="/spaces.htm">spacesController</prop>
        <prop key="/contents.htm">contentsController</prop>
        <prop key="/content.htm">contentController</prop>
        <prop key="/removeContent.htm">removeContentController</prop>
        <prop key="/addContent.htm">addContentController</prop>
      </props>
    </property>
    <property name="order" value="1" />
  </bean>

  <!-- Request Controllers - processes request -->
  <bean id="spacesController" class="org.duraspace.customerwebapp.control.SpacesController">
    <property name="successView" value="spaces" />
  </bean>

  <bean id="contentsController" class="org.duraspace.customerwebapp.control.ContentsController">
    <property name="successView" value="contents" />
  </bean>
  
  <bean id="removeContentController" class="org.duraspace.customerwebapp.control.RemoveContentController">
    <property name="successView" value="contents" />
  </bean>
  
  <bean id="addContentController" class="org.duraspace.customerwebapp.control.AddContentController">
    <property name="successView" value="contents" />
  </bean>    

  <bean id="contentController" class="org.duraspace.customerwebapp.control.ContentController">
    <property name="successView" value="content" />  
  </bean>
  
  <!-- View Resolvers - select the JSP to display results -->
  <bean id="duraViewResolver"
    class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="viewClass"
      value="org.springframework.web.servlet.view.JstlView"></property>
    <property name="prefix" value="/WEB-INF/jsp/"></property>
    <property name="suffix" value=".jsp"></property>
  </bean>

  <bean id="exceptionResolver" class="org.duraspace.customerwebapp.common.SimpleExceptionResolver">
    <property name="exceptionMappings">
      <props>
        <prop key="java.lang.Exception">error</prop>
      </props>
    </property>
    <property name="order" value="2" />
  </bean>
  
  <!-- Domain Beans -->
  <bean id="storageProviderFactory" class="org.duraspace.customerwebapp.util.StorageProviderFactory">
    <property name="statelessProvider" ref="statelessStoragePvdr"/>
  </bean>
  
  <bean id="statelessStoragePvdr" class="org.duraspace.storage.provider.StatelessStorageProviderImpl"/>

  <!-- Enables plain Controllers -->
  <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter" />
  
</beans>