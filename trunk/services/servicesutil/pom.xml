<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.duracloud.services</groupId>
  <artifactId>servicesutil</artifactId>
  <version>1.0.0</version>
  <name>DuraCloud Adminstrative Services Utility Bundle</name>
  <url>http://duracloud.org</url>
  <packaging>bundle</packaging>

  <parent>
    <artifactId>services</artifactId>
    <groupId>org.duracloud</groupId>
    <version>1.0.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.duracloud.services</groupId>
                  <artifactId>helloservice</artifactId>
                  <version>1.0.0</version>
                </artifactItem>
              </artifactItems>
              <outputDirectory>src/test/resources</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <executions>
          <execution>
            <id>integrationtest</id>
            <phase>integration-test</phase>
            <goals>
              <goal>test</goal>
            </goals>

            <configuration>
              <systemProperties>
                <property>
                  <name>base.dir</name>
                  <value>${basedir}</value>
                </property>
              </systemProperties>

              <trimStackTrace>false</trimStackTrace>
              <excludes>
                <exclude>${unitTests}</exclude>
                <exclude>${instrumentedTests}</exclude>
              </excludes>
              <includes>
                <include>${integrationTests}</include>
              </includes>
           </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>


  <dependencies>
  
    <!-- internal projects -->
    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>common</artifactId>
      <version>1.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.duracloud.services</groupId>
      <artifactId>computeservice</artifactId>
      <version>1.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.duracloud.services</groupId>
      <artifactId>servicescommon</artifactId>
      <version>1.0.0</version>
      <scope>provided</scope>
    </dependency>


    <dependency>  
      <groupId>org.apache.commons</groupId>  
      <artifactId>com.springsource.org.apache.commons.httpclient</artifactId>  
      <version>3.1.0</version> 
    </dependency>

    <!-- for FileUpload -->
    <dependency>
      <groupId>org.apache.commons</groupId>  
      <artifactId>com.springsource.org.apache.commons.fileupload</artifactId>  
      <version>1.2.0</version> 
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>  
      <artifactId>com.springsource.org.apache.commons.codec</artifactId>  
      <version>1.3.0</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.configadmin</artifactId>
      <version>1.0.10</version>
      <scope>provided</scope>
    </dependency>
  

    <!-- logging --> 
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.5.6</version>
    </dependency>
    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.5.6</version>
    </dependency> 

    <!-- mock objects -->
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymockclassextension</artifactId>
      <version>2.4</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>com.thoughtworks.xstream</groupId>
      <artifactId>com.springsource.com.thoughtworks.xstream</artifactId>
      <version>1.3.0</version>
    </dependency>


  </dependencies>
  
</project>
