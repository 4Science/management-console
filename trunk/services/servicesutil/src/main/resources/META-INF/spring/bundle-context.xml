<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Spring beans which are used by the bundle are defined here. -->
  <bean id="srvLister" class="org.duracloud.servicesutil.util.internal.ServiceListerImpl">
    <property name="duraServices" ref="duraServices" />
  </bean>
  
  <bean id="srvInstaller" class="org.duracloud.servicesutil.util.internal.ServiceInstallerImpl" >
    <property name="bundleHome" ref="bundleHome" />
  </bean>
  
  <bean id="srvUninstaller" class="org.duracloud.servicesutil.util.internal.ServiceUninstallerImpl" >
    <property name="bundleHome" ref="bundleHome" />
  </bean>
  
  <bean id="duraConfigAdmin" class="org.duracloud.servicesutil.util.internal.DuraConfigAdminImpl" >
    <property name="osgiConfigAdmin" ref="osgiConfigAdminSrv" />
  </bean>
  
  <bean id="srvStarter" class="org.duracloud.servicesutil.util.internal.ServiceStarterImpl">
    <property name="duraServices" ref="duraServices" />
    <property name="bundleHome" ref="bundleHome" />
  </bean>
  
  <bean id="srvStopper" class="org.duracloud.servicesutil.util.internal.ServiceStopperImpl">
    <property name="duraServices" ref="duraServices" />
  </bean>

  <bean id="srvStatusReporter" class="org.duracloud.servicesutil.util.internal.ServiceStatusReporterImpl">
    <property name="duraServices" ref="duraServices" />
  </bean>

  <bean id="srvPropsFinder" class="org.duracloud.servicesutil.util.internal.ServicePropsFinderImpl">
    <property name="duraServices" ref="duraServices" />
  </bean>
  
  <!-- Properties config -->
  <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"  >
    <property name="location" value="osgi-config.properties" />
  </bean>

  <bean id="bundleHome" class="org.duracloud.services.common.util.BundleHome" />

 
</beans> 
