
<!--  CONTEXT added per JNDI How-to for datasource setup  -->
<Context reloadable="false">

    <!--  Disable Manager session persistance - causes failures w/iBATIS
    <Manager pathname=""/>
    -->

    <Resource name="jdbc/mainDatasource" 
              auth="Container" 
              type="javax.sql.DataSource"              
              username="duraspace" 
              password="duraspace" 
              driverClassName="org.apache.derby.jdbc.EmbeddedDriver"
              url="jdbc:derby:/opt/derby/duraspaceDB"
              maxActive="100" 
              maxIdle="30" 
              maxWait="10000"/>

</Context>
