<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- URL to flow mapping rules -->
  <bean
    class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <value>/acct/create.htm=acctCreateFlowHandler
      </value>
    </property>
    <property name="order" value="0" />
  </bean>

  <!-- Controls access to the account creation flow -->
  <bean id="acctCreateFlowHandler" class="org.duraspace.mainwebapp.control.AcctCreateFlowHandler" />


  <bean
    class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <props>
        <prop key="/home.htm">homeController</prop>
        <prop key="/aboutMarketing.htm">homeController</prop>
        <prop key="/aboutTech.htm">homeController</prop>
        <prop key="/contactUs.htm">homeController</prop>
        <prop key="/login.htm">loginController</prop>
        <prop key="/acctStatus.htm">acctStatusController</prop>
        <prop key="/computeStatus.htm">computeStatusController</prop>
        <prop key="/welcomeAcctCreate.htm">acctController</prop>
      </props>
    </property>
    <property name="order" value="1" />
  </bean>


  <bean id="exceptionResolver" class="org.duraspace.mainwebapp.control.DuraHandlerExceptionResolver">
    <property name="exceptionMappings">
      <props>
        <prop key="java.lang.Exception">error</prop>
      </props>
    </property>
    <property name="order" value="2" />
  </bean>

  <bean id="homeController" class="org.duraspace.mainwebapp.control.SubDirController">
    <property name="prefix" value="/home/" />
  </bean>

  <bean id="loginController" class="org.duraspace.mainwebapp.control.LoginController">
    <property name="acctRepository" ref="customerAcctRepo" />
    <property name="formView" value="/acctUpdate/login" />
    <property name="successView" value="/acctUpdate/acctStatus" />
  </bean>
  
  <bean id="acctStatusController" class="org.duraspace.mainwebapp.control.AcctStatusController" >
    <property name="computeManager" ref="computeMgr" />
  </bean>

  <bean id="computeStatusController" class="org.duraspace.mainwebapp.control.ComputeStatusController" >
    <property name="computeManager" ref="computeMgr" />
  </bean>

  <bean id="acctController" class="org.duraspace.mainwebapp.control.SubDirController">
    <property name="prefix" value="/acctCreate/" />
  </bean>


  <bean id="duraViewResolver"
    class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="viewClass"
      value="org.springframework.web.servlet.view.JstlView"></property>
    <property name="prefix" value="/WEB-INF/jsp/"></property>
    <property name="suffix" value=".jsp"></property>
  </bean>


  <!-- domain beans -->
  <bean id="computeMgr" class="org.duraspace.mainwebapp.mgmt.ComputeManagerImpl">
    <property name="customerAcctRepository" ref="customerAcctRepo" />
    <property name="computeAcctRepository" ref="computeAcctRepo" />
  </bean>
  
  <bean id="customerAcctRepo" class="org.duraspace.mainwebapp.domain.repo.CustomerAcctRepositoryFileImpl">
    <property name="properties">
      <props>
        <prop key="repoLocation" >customerAcctRepo.xml</prop>
      </props>
    </property>
  </bean>
  
  <bean id="computeAcctRepo" class="org.duraspace.mainwebapp.domain.repo.ComputeAcctRepositoryFileImpl">
    <property name="properties">
      <props>
        <prop key="repoLocation" >computeAcctRepo.xml</prop>
      </props>
    </property>
  </bean>  

  <bean id="computeProviderFactory" class="org.duraspace.serviceprovider.mgmt.ComputeProviderFactory">
    <property name="idToClassMap">
      <map>
        <entry key="amazon-ec2" value="org.duraspace.ec2serviceprovider.mgmt.EC2ServiceProvider" />
      </map>
    </property>
  </bean>
  
  <bean id="storageMgr" class="org.duraspace.mainwebapp.mgmt.StorageManagerImpl">
    <property name="repo" ref="storageAcctRepo" />
  </bean>
  
  <bean id="storageAcctRepo" class="org.duraspace.mainwebapp.domain.repo.StorageAcctRepositoryFileImpl">
    <property name="properties">
      <props>
        <prop key="repoLocation">storageAcctRepo.xml</prop>
      </props>  
    </property>
  </bean>


  <!-- Enables plain Controllers -->
  <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter" />

  <!-- Enables FlowHandlers -->
  <bean class="org.springframework.webflow.mvc.servlet.FlowHandlerAdapter">
    <property name="flowExecutor" ref="flowExecutor" />
  </bean>

</beans>